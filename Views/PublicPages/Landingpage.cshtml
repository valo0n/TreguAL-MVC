
@{
    Layout = "_Layout";
}
<div class="text-[#112D4E]">

    <div class="mx-4 md:mx-20">

        <!-- NAVBAR -->
        <nav class="bg-grey-50 flex items-center justify-between px-4 py-2 mt-5">
            <div class="flex items-center">
                <img src="~/images/stox-logo.png" alt="stoxLogo" class="h-10 w-auto" />
            </div>

            <!-- Desktop -->
            <div class="hidden md:flex items-center space-x-7">
                <a href="/PublicPages/Landingpage" class="text-gray-800">Home</a>
                <a href="/PublicPages/Contact" class="text-gray-800">Contact</a>
                <a href="/AuthPages/SignUpForm"
                   class="bg-[#112D4E] text-white px-4 py-2 rounded-lg
                          hover:bg-gray-50 hover:text-blue-500 hover:border hover:border-blue-500">
                    Sign Up
                </a>
                <a href="/AuthPages/Login"
                   class="bg-white text-[#112D4E] px-4 py-2 border border-[#112D4E] rounded-lg
                          hover:bg-[#112D4E] hover:text-gray-50">
                    Login
                </a>
            </div>

            <!-- Mobile toggle -->
            <div class="md:hidden">
                <button onclick="toggleMenu()" class="text-2xl">
                    ☰
                </button>
            </div>
        </nav>

        <!-- MOBILE MENU -->
        <div id="mobileMenu" class="hidden flex-col md:hidden items-center space-y-2 pb-4">
            <a href="/PublicPages/Landingpage" class="text-gray-800">Home</a>
            <a href="/PublicPages/Contact" class="text-gray-800">Contact</a>
            <a href="/AuthPages/SignUpForm"
               class="bg-[#112D4E] text-white px-4 py-2 rounded-lg">
                Sign Up
            </a>
            <a href="/AuthPages/Login"
               class="bg-white text-[#112D4E] px-4 py-2 border border-[#112D4E] rounded-lg">
                Login
            </a>
        </div>

        <!-- HERO -->
        <div class="flex flex-col md:flex-row items-center justify-between mt-10 md:mt-0">
            <div class="text-center md:text-left md:ml-10">
                <p class="text-4xl md:text-5xl font-bold mb-1">
                    A New Era in Stock Tracking
                </p>
                <p class="text-4xl md:text-5xl text-amber-500 font-bold">
                    Easy, Fast, Reliable!
                </p>
                <h6 class="mt-5 font-bold">
                    Check Every Product, Track Every Sale!
                </h6>
            </div>

            <div class="hidden md:block">
                <img src="~/images/landing1.png" alt="landing1" />
            </div>
        </div>

        <!-- FEATURES -->
        <div class="mt-10">
            <div class="text-center underline font-bold text-3xl">
                <h1>Make Stock Management Smart!</h1>
            </div>

            <section class="flex flex-col md:flex-row justify-center items-start
                            md:space-x-16 px-4 py-8 mt-7">

                <div class="text-center max-w-xs mx-auto mb-8 md:mb-0">
                    <img src="~/images/Vector.png" class="mx-auto mb-4" />
                    <h6 class="text-lg font-semibold mb-1">
                        Track your products <br /> instantly
                    </h6>
                    <p class="text-sm text-gray-700">
                        Instantly see which products are left in stock. Take precautions
                        before your products run out and manage your orders on time with low stock alerts.
                    </p>
                </div>

                <div class="text-center max-w-xs mx-auto mb-8 md:mb-0">
                    <img src="~/images/Icon.png" class="mx-auto mb-1" />
                    <h6 class="text-lg font-semibold mb-2">
                        Automatically update <br /> sales and stocks
                    </h6>
                    <p class="text-sm text-gray-700">
                        Each time a sale is made, the system deducts the stock,
                        so you don't have to enter it manually.
                    </p>
                </div>

                <div class="text-center max-w-xs mx-auto">
                    <img src="~/images/Icon2.png" class="mx-auto mb-1" />
                    <h6 class="text-lg font-semibold mb-2">
                        Easily manage invoices <br /> and customer records
                    </h6>
                    <p class="text-sm text-gray-700">
                        Quickly view each transaction by storing customer
                        information and invoice records in the system.
                    </p>
                </div>
            </section>
        </div>

        <!-- INFO SECTION -->
        <div class="flex flex-col md:flex-row items-center justify-between
                    max-w-6xl mx-auto px-6 py-12">

            <div class="w-full md:w-1/2 mb-6 md:mb-0 hidden md:block">
                <img src="./images/metode_EOQ__Economic_Order_Quantity__dalam_manajemen_inventori-removebg-preview 1.png" class="w-full h-auto" />
            </div>

            <div class="w-full md:w-1/2 md:pl-12 text-center md:text-left">
                <h1 class="text-3xl md:text-4xl font-bold mb-4">
                    Simplify Your Stock Management,<br />Grow Your Business!
                </h1>
                <p class="font-medium leading-relaxed">
                    Track your business's stocks instantly and manage all processes automatically.
                    Your stocks will be updated automatically as you make sales.
                </p>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <div class="bg-[#112D4E] text-white py-6">
        <footer class="flex flex-col items-center justify-center">
            <img src="~/images/stox-logo.png"
                 alt="stoxLogofoot"
                 class="h-20 w-auto mb-2 mt-10" />
            <p class="text-sm mt-5">
                &copy; 2025 STOX — All rights reserved.
            </p>
        </footer>
    </div>
</div>

<script src="~/js/components/landingpage.js"></script>
