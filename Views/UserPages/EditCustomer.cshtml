@{
    Layout = "_Layout";
}

<div class="flex flex-col min-h-screen md:flex-row">

    @await Html.PartialAsync("~/Views/Partials/_SidebarUser.cshtml")

    <div class="flex-1 p-4 md:p-8 flex flex-col">

        @await Html.PartialAsync("~/Views/Partials/_Header.cshtml")

        <div class="p-10 max-w-lg mx-auto mt-10">
            <h1 class="text-2xl font-semibold mb-6 text-center underline">
                Edit Customer
            </h1>

            <button type="button"
                    onclick="goBack()"
                    class="text-sm font-medium text-gray-800 hover:text-amber-500 transition-colors mb-5 cursor-pointer">
                &lt;&lt; Back
            </button>

            <form id="editCustomerForm" class="space-y-4">

                <input type="text"
                       name="full_Name"
                       id="full_Name"
                       placeholder="Full Name"
                       class="border p-2 w-full"
                       required />

                <input type="email"
                       name="email"
                       id="email"
                       placeholder="Email"
                       class="border p-2 w-full"
                       required />

                <input type="tel"
                       name="phone_Number"
                       id="phone_Number"
                       placeholder="Phone Number"
                       class="border p-2 w-full"
                       required />

                <input type="text"
                       name="address"
                       id="address"
                       placeholder="Address"
                       class="border p-2 w-full"
                       required />

                <button type="submit"
                        class="bg-[#112D4E] text-white px-6 py-2 rounded-md
                               hover:bg-[#0b213f] w-full cursor-pointer">
                    Update Customer
                </button>
            </form>
        </div>
    </div>
</div>

<!-- SUCCESS POPUP -->
<div id="successPopup"
     class="fixed top-6 left-1/2 transform -translate-x-1/2
            bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg
            z-50 hidden md:ml-30 transition-all duration-300">
    Customer updated successfully!
</div>

<script src="~/js/components/edit-customer.js"></script>
