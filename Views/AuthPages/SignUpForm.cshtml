@{
    Layout = "_Layout";
}

<div class="flex justify-center bg-white min-h-screen font-sans px-4 md:px-10 xl:px-24">
    <div class="flex flex-col xl:flex-row w-full max-w-[1440px]">

        <!-- Illustration -->
        <div class="hidden xl:flex w-1/2 items-center justify-start px-8">
            <div class="border-[10px] border-[#0d274b] rounded-xl p-2 bg-white">
                <img src="~/images/illustration.png"
                     alt="Illustration"
                     class="w-full h-auto rounded-lg" />
            </div>
        </div>

        <!-- Form -->
        <div class="w-full xl:w-1/2 max-w-[540px] p-10 bg-white
                    flex flex-col justify-center items-center mx-auto">

            <img src="~/images/stox-logo.png"
                 alt="STOX Logo"
                 class="w-[250px] h-[70px] object-contain mb-12 self-start" />

            <!-- Header -->
            <div class="flex items-center justify-between w-full max-w-[600px]
                        mb-8 h-10 relative">

                <button type="button"
                        onclick="goBack()"
                        class="text-sm font-medium text-gray-800 hover:text-amber-500
                               transition-colors bg-transparent border-none outline-none
                               font-outfit cursor-pointer">
                    &lt;&lt; Back
                </button>

                <h2 class="text-xl font-bold text-center absolute left-1/2
                           transform -translate-x-1/2 font-outfit">
                    Sign Up
                </h2>

                <p class="text-sm text-gray-600 whitespace-nowrap font-outfit">
                    1 Step 2
                </p>
            </div>

            <!-- FORM -->
            <form id="signupForm"
                  class="w-full max-w-[500px] flex flex-col space-y-6">

                <!-- Business Name -->
                <div class="space-y-1">
                    <fieldset id="businessNameField"
                              class="border rounded-md px-3 pt-1 pb-2 border-gray-300">
                        <legend class="text-sm text-gray-600 px-1">Business name</legend>
                        <input id="businessName"
                               placeholder="Example business LLC"
                               class="w-full border-none outline-none text-sm" />
                    </fieldset>
                    <p id="businessNameError"
                       class="text-red-500 text-xs pl-1 hidden"></p>
                </div>

                <!-- Email -->
                <div class="space-y-1">
                    <fieldset id="emailField"
                              class="border rounded-md px-3 pt-1 pb-2 border-gray-300">
                        <legend class="text-sm text-gray-600 px-1">Email</legend>
                        <input id="email"
                               placeholder="business@domain.com"
                               class="w-full border-none outline-none text-sm" />
                    </fieldset>
                    <p id="emailError"
                       class="text-red-500 text-xs pl-1 hidden"></p>
                </div>

                <!-- Business Number -->
                <div class="space-y-1">
                    <fieldset id="businessNumberField"
                              class="border rounded-md px-3 pt-1 pb-2 border-gray-300">
                        <legend class="text-sm text-gray-600 px-1">Business number</legend>
                        <input id="businessNumber"
                               maxlength="9"
                               placeholder="123456789"
                               class="w-full border-none outline-none text-sm" />
                    </fieldset>
                    <p id="businessNumberError"
                       class="text-red-500 text-xs pl-1 hidden"></p>
                </div>

                <!-- Address -->
                <div class="space-y-1">
                    <fieldset id="addressField"
                              class="border rounded-md px-3 pt-1 pb-2 border-gray-300">
                        <legend class="text-sm text-gray-600 px-1">Address</legend>
                        <input id="address"
                               placeholder="Prishtina"
                               class="w-full border-none outline-none text-sm" />
                    </fieldset>
                    <p id="addressError"
                       class="text-red-500 text-xs pl-1 hidden"></p>
                </div>

                <button type="submit"
                        class="w-full bg-[#0d274b] text-white font-semibold
                               py-3 rounded-md hover:bg-[#0b213f]
                               transition duration-300">
                    Continue
                </button>
            </form>

            <p class="mt-5 text-sm text-center">
                Already have an account?
                <a href="/AuthPages/Login"
                   class="text-amber-500 font-medium hover:underline">
                    Login
                </a>
            </p>
        </div>
    </div>
</div>

<script src="~/js/components/signup.js"></script>
