@{
    Layout = "_Layout";
}

<div class="flex justify-center bg-white min-h-screen font-sans px-4 md:px-10 xl:px-24">

    <!-- Left Illustration -->
    <div class="hidden xl:flex w-1/2 items-center justify-start px-8">
        <div class="border-[10px] border-[#0d274b] rounded-xl p-2 bg-white">
            <img src="~/images/illustration.png"
                 alt="Illustration"
                 class="w-full h-auto rounded-lg" />
        </div>
    </div>

    <!-- Right Panel -->
    <div class="w-full xl:w-1/2 max-w-[540px] p-10 bg-white
                flex flex-col justify-center items-center mx-auto">

        <img src="~/images/stox-logo.png"
             alt="STOX Logo"
             class="w-[250px] h-[70px] object-contain mb-12
                    self-center xl:self-start" />

        <div class="flex items-center justify-center w-full max-w-[600px]
                    mb-8 h-10 relative">
            <h2 class="text-xl font-bold text-center font-outfit leading-none">
                Reset your password
            </h2>
        </div>

        <form id="resetForm" class="w-full space-y-6 max-w-[500px]">

            <!-- New Password -->
            <div class="space-y-1">
                <fieldset id="passwordField"
                          class="border rounded-md px-3 pt-1 pb-2 border-gray-300">
                    <legend class="text-sm text-gray-600 px-1">New Password</legend>
                    <input id="password"
                           type="password"
                           class="w-full border-none outline-none text-gray-800" />
                </fieldset>
                <p id="passwordError"
                   class="text-red-500 text-xs pl-1 hidden"></p>
            </div>

            <!-- Confirm Password -->
            <div class="space-y-1">
                <fieldset id="confirmPasswordField"
                          class="border rounded-md px-3 pt-1 pb-2 border-gray-300">
                    <legend class="text-sm text-gray-600 px-1">Confirm Password</legend>
                    <input id="confirmPassword"
                           type="password"
                           class="w-full border-none outline-none text-gray-800" />
                </fieldset>
                <p id="confirmPasswordError"
                   class="text-red-500 text-xs pl-1 hidden"></p>
            </div>

            <!-- Submit -->
            <button type="submit"
                    class="w-full bg-[#112D4E] text-white font-medium py-2
                           rounded-md hover:bg-[#0e2442]
                           transition duration-300">
                Change Password
            </button>

            <p id="message"
               class="text-sm text-center mt-2 text-gray-700 hidden"></p>
        </form>
    </div>
</div>

<script src="~/js/components/reset-password.js"></script>
