@{
    Layout = "_Layout";
}

<div class="flex justify-center bg-white min-h-screen font-sans px-4 md:px-10 xl:px-24">

    <!-- Left Illustration -->
    <div class="hidden xl:flex w-1/2 items-center justify-start px-8">
        <div class="border-[10px] border-[#0d274b] rounded-xl p-2 bg-white">
            <img src="~/images/illustration.png"
                 alt="Illustration"
                 class="w-full h-auto rounded-lg" />
        </div>
    </div>

    <!-- Right Panel -->
    <div class="w-full xl:w-1/2 max-w-[540px] p-10 bg-white
                flex flex-col justify-center items-center mx-auto">

        <!-- Logo -->
        <img src="~/images/stox-logo.png"
             alt="STOX Logo"
             class="w-[250px] h-[70px] object-contain mb-12
                    self-center xl:self-start" />

        <!-- Header -->
        <div class="flex items-center justify-between w-full max-w-[600px]
                    mb-8 h-10 relative">

            <button type="button"
                    onclick="goBack()"
                    class="text-sm font-medium text-gray-800 hover:text-amber-500
                           transition-colors bg-transparent border-none outline-none
                           font-outfit cursor-pointer">
                &lt;&lt; Back
            </button>

            <h2 class="text-xl font-bold text-center absolute left-1/2
                       transform -translate-x-1/2 font-outfit leading-none">
                Forgot your password?
            </h2>
        </div>

        <!-- Description -->
        <p class="mb-5 text-sm text-gray-600 text-center">
            Don't worry, happens to all of us.
            Enter your email below to recover your password
        </p>

        <!-- Form -->
        <form id="forgotForm" class="w-full space-y-6 max-w-[500px]">

            <div class="space-y-1">
                <fieldset id="emailFieldset"
                          class="border border-gray-300 rounded-md px-3 pt-1 pb-2">
                    <legend class="text-sm text-gray-600 px-1">Email</legend>
                    <input id="emailInput"
                           type="email"
                           placeholder="business@domain.com"
                           class="w-full border-none outline-none text-gray-800" />
                </fieldset>
                <p id="emailError"
                   class="text-red-500 text-xs pl-1 hidden">
                    Email is required
                </p>
            </div>

            <button type="submit"
                    class="w-full bg-[#112D4E] text-white font-medium py-2
                           rounded-md hover:bg-[#0e2442] transition duration-300">
                Send Email
            </button>
        </form>
    </div>
</div>

<script src="~/js/components/forgot-link.js"></script>
