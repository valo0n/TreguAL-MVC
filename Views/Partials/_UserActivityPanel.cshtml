@{
    Layout = "_Layout";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>

<div class="w-full max-w-5xl mx-auto p-6 md:p-10 relative">
    <h2 class="text-2xl font-bold text-[#112D4E] mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#f97316" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-activity"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
        User Activity Panel
    </h2>

    <div class="mb-3">
        <h3 class="text-lg font-semibold text-[#112D4E] mb-3 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/><polyline points="10 17 15 12 10 7"/><line x1="15" x2="3" y1="12" y2="12"/></svg>
            Users Logged In Today
        </h3>

        <div id="usersViewMoreContainer" class="text-right mt-2 hidden">
            <button id="btnOpenUsersModal" class="text-sm text-blue-600 hover:underline font-medium mb-1">
                View More
            </button>
        </div>

        <div class="overflow-x-auto rounded-lg border border-gray-200 shadow-sm">
            <table class="min-w-full divide-y divide-gray-200 text-sm text-left">
                <thead class="bg-gray-100 text-[#112D4E] text-sm">
                    <tr>
                        <th class="px-4 py-3 font-semibold">Business Name</th>
                        <th class="px-4 py-3 font-semibold">Login Count</th>
                        <th class="px-4 py-3 font-semibold">Latest Login</th>
                        <th class="px-4 py-3 font-semibold">View Who</th>
                    </tr>
                </thead>
                <tbody id="usersTableBody" class="bg-white divide-y divide-gray-100">
                    <tr id="usersLoading">
                        <td colspan="4" class="px-4 py-6 text-center">
                            <div class="flex justify-center items-center gap-2">
                                <div class="h-4 w-4 bg-[#112D4E] rounded-full animate-spin"></div>
                                <span class="text-gray-500">Loading users...</span>
                            </div>
                        </td>
                    </tr>
                    <tr id="usersNoData" class="hidden">
                        <td colspan="4" class="text-center py-6 text-gray-500">
                            No users have logged in today.
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="flex justify-between items-center mb-1 mt-6">
        <h3 class="text-lg font-semibold text-[#112D4E] flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            Latest Activity Logs
        </h3>
        <button id="btnOpenLogsModal" class="text-sm text-blue-600 hover:underline font-medium hidden">
            View More
        </button>
    </div>

    <div id="latestLogsContainer" class="grid gap-3">
        </div>

    <div id="logsModal" class="fixed inset-0 bg-black/30 backdrop-blur-sm flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-xl shadow-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto p-6 relative">
            <button id="btnCloseLogsModal" class="absolute top-3 right-4 text-gray-600 hover:text-red-500">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
            </button>
            <h3 class="text-xl font-bold mb-4 text-[#112D4E] flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                Recent Activity Logs
            </h3>
            <div id="modalLogsContent" class="grid gap-3">
                </div>
        </div>
    </div>

    <div id="usersModal" class="fixed inset-0 bg-black/30 backdrop-blur-sm flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-xl shadow-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto p-6 relative">
            <button id="btnCloseUsersModal" class="absolute top-3 right-4 text-gray-600 hover:text-red-500">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
            </button>
            <h3 class="text-xl font-bold mb-4 text-[#112D4E] flex items-center gap-2">
                 <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/><polyline points="10 17 15 12 10 7"/><line x1="15" x2="3" y1="12" y2="12"/></svg>
                All Users Logged In Today
            </h3>
            <table class="min-w-full divide-y divide-gray-200 text-sm text-left">
                <thead class="bg-gray-100 text-[#112D4E] text-sm">
                    <tr>
                        <th class="px-4 py-3 font-semibold">Business Name</th>
                        <th class="px-4 py-3 font-semibold">Login Count</th>
                        <th class="px-4 py-3 font-semibold">Latest Login</th>
                    </tr>
                </thead>
                <tbody id="modalUsersBody" class="bg-white divide-y divide-gray-100">
                    </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/components/user-activity.js"></script>