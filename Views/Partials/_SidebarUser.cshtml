@{
    Layout = "_Layout";
}
<!-- DESKTOP SIDEBAR -->
<div class="bg-[#112D4E] w-65 h-screen rounded-tr-2xl rounded-br-2xl flex-col justify-between p-4 hidden md:flex">

    <div>
        <!-- Logo -->
        <div class="mb-8 mt-5 flex justify-center">
            <img src="~/images/stox-logo.png" alt="Logo" class="h-10" />
        </div>

        <!-- Links -->
        <div class="flex flex-col gap-6 m-5">
            <a href="/UserPages/UserDashboard" class="user-sidebar-link flex items-center gap-3 text-white">
                <img src="~/images/chart.png" />
                <h3>Overview</h3>
            </a>

            <a href="/StockPages/Product" class="user-sidebar-link flex items-center gap-3 text-white">
                <img src="~/images/Iconproduct.png" />
                <h3 class="ml-1.5">Products</h3>
            </a>

            <a href="/StockPages/Sale" class="user-sidebar-link flex items-center gap-3 text-white">
                <img src="~/images/shoppingcart.png" />
                <h3>Sales</h3>
            </a>

            <a href="/UserPages/Customer" class="user-sidebar-link flex items-center gap-3 text-white">
                <img src="~/images/user.png" />
                <h3>Customers</h3>
            </a>

            <a href="/StockPages/Purchase" class="user-sidebar-link flex items-center gap-3 text-white">
                <img src="~/images/purchase.png" />
                <h3 class="ml-0.5">Purchase</h3>
            </a>

            <a href="/StockPages/Income" class="user-sidebar-link flex items-center gap-3 text-white">
                <img src="~/images/income.png" />
                <h3>Incomes</h3>
            </a>

            <!-- Admin Panel (shown only if role === Admin) -->
            <a id="adminPanelLink" href="/AdminPages/Dashboard"
               class="user-sidebar-link hidden flex items-center gap-3 text-white">
                <img src="~/images/panel.png" />
                <h3>Admin Panel</h3>
            </a>
        </div>
    </div>

    <!-- Bottom -->
    <div class="flex flex-col gap-6 m-5">
        <a href="/PublicPages/Contact" class="user-sidebar-link flex items-center gap-3 text-white">
            <img src="~/images/mail.png" />
            <h3>Contact Us</h3>
        </a>

        <a href="/UserPages/SettingsPage" class="user-sidebar-link flex items-center gap-3 text-white">
            <img src="~/images/shape.png" />
            <h3>Settings</h3>
        </a>

        <button onclick="openLogoutModal()" class="flex items-center gap-3 text-white cursor-pointer">
            <img src="~/images/logout.png" />
            <h3>Logout</h3>
        </button>
    </div>
</div>

<!-- MOBILE NAVBAR -->
<div class="md:hidden flex items-center justify-between bg-[#112D4E] p-4">
    <img src="~/images/stox-logo.png" alt="Logo" class="h-8" />
    <button onclick="toggleUserMobileSidebar()" class="text-white text-3xl">&#9776;</button>
</div>


<!-- MOBILE MENU -->
<div id="userMobileSidebar" class="md:hidden bg-[#112D4E] flex-col gap-4 p-4 hidden">
    <a href="/UserPages/UserDashboard" class="user-mobile-link text-white">Overview</a>
    <a href="/StockPages/Product" class="user-mobile-link text-white">Products</a>
    <a href="/StockPages/Sale" class="user-mobile-link text-white">Sales</a>
    <a href="/UserPages/Customer" class="user-mobile-link text-white">Customers</a>
    <a href="/StockPages/Purchase" class="user-mobile-link text-white">Purchase</a>
    <a href="/StockPages/Income" class="user-mobile-link text-white">Income</a>

    <a id="adminPanelMobileLink" href="/AdminPages/Dashboard"
       class="user-mobile-link hidden text-white">Admin Panel</a>

    <a href="/PublicPages/Contact" class="user-mobile-link text-white">Contact Us</a>
    <a href="/UserPages/SettingsPage" class="user-mobile-link text-white">Settings</a>
    <button onclick="openLogoutModal()" class="text-left text-white">Logout</button>
</div>

@await Html.PartialAsync("~/Views/Partials/_LogoutModal.cshtml")
